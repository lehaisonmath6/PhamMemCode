@model ThiOnlineMVC.KyThi

@{
    ViewBag.Title = "Tạo kỳ thi";
}

<div class="center-block">
    <div>
        <div class="p-5 center-block">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Tạo mới kỳ thi!</h1>
            </div>
            @using (Html.BeginForm("Create", "KyThis", FormMethod.Post, new { @class = "user" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IDKyThi)

                <div class="form-group">
                    @Html.EditorFor(model => model.TenKyThi, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Tên kỳ thi" } })
                    @Html.ValidationMessageFor(model => model.TenKyThi, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Mô tả" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            

                <div class="form-group">
                    <p><b>Ngày bắt đầu</b></p>
                    <input class="form-control form-control-user" data-val="true" data-val-required="Date is required"
                           id="NgayBatDau" name="NgayBatDau" type="date" value="1/11/1989" />
                    @Html.ValidationMessageFor(model => model.NgayBatDau, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <p><b>Ngày kết thúc</b></p>
                    <input class="form-control form-control-user" data-val="true" data-val-required="Date is required"
                           id="NgayKetThuc" name="NgayKetThuc" type="date" value="1/11/1989" />
                    @Html.ValidationMessageFor(model => model.NgayBatDau, "", new { @class = "text-danger" })
                </div>
              
                <button type="submit" value="Create" class="btn btn-google btn-user btn-block">Tạo kỳ thi</button>
            </div>
            }
            <hr>
            <div class="text-center">
                <div>
                    @Html.ActionLink("Quay trở lại danh sách", "Index", "KyThis", new { @class = "small" })
                </div>
            </div>
        </div>
    </div>
</div>