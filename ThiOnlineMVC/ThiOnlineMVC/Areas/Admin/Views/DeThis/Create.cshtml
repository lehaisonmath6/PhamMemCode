@model ThiOnlineMVC.Areas.Admin.Models.DeThiModel

@{
    ViewBag.Title = "Tạo mới đề thi";
}

@{
    ThiOnlineMVC.ThiOnlineEntities thiOnlineEntities = new ThiOnlineMVC.ThiOnlineEntities();
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-1 text-gray-800">Tạo đề thi từ ngân hàng câu hỏi</h1>


    <!-- Content Row -->
    <div class="row">

        <!-- Grow In Utility -->
        <div class="col-lg-6">
            <div class="card position-relative">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Cây câu hỏi</h6>
                </div>
                <div class="card-body">
                    <ul id="myUL">
                        @{
                            foreach (var khoa in thiOnlineEntities.Khoas)
                            {
                                <li>
                                    <span class="caret">@khoa.TenKhoa</span>
                                    <ul class="nested">
                                        @foreach (var monhoc in khoa.MonHocs)
                                        {
                                            <li>
                                                <span class="caret">@monhoc.TenMonHoc</span>
                                                <ul class="nested">
                                                    @foreach (var chuonghoc in monhoc.ChuongHocs)
                                                    {
                                                        <li>
                                                            <span class="caret">@chuonghoc.TenChuong</span>
                                                            <ul class="nested">
                                                                @foreach (var doanvan in chuonghoc.DoanVans)
                                                                {
                                                                    <li>
                                                                        <span class="caret">@doanvan.TenDoanVan</span>
                                                                        <ul class="nested">
                                                                            @foreach (var cauhoi in doanvan.CauHois)
                                                                            {
                                                                                <li>
                                                                                    <input type="checkbox" onclick="chkClick(this,@cauhoi.IDCauHoi)" />
                                                                                   <a href="@Url.Action("Index","CauHois",new { id = cauhoi.IDCauHoi})"> @cauhoi.TenCauHoi</a>
                                                                                    <p>@cauhoi.DoKho.TenDoKho</p>
                                                                                </li>
                                                                            }
                                                                        </ul>
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </li>
                                                    }
                                                </ul>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }
                        }
                        <script type="text/javascript">
                            var toggler = document.getElementsByClassName("caret");
                            var i;

                            for (i = 0; i < toggler.length; i++) {
                                toggler[i].addEventListener("click", function () {
                                    this.parentElement.querySelector(".nested").classList.toggle("active");
                                    this.classList.toggle("caret-down");
                                });
                            }
                        </script>
                    </ul>
                </div>
            </div>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Tùy chọn</h6>
                </div>
                <div class="card-body">

                    <a href="@Url.Action("Create","CauHois")" class="btn btn-primary btn-block"> Thêm câu hỏi</a>
                </div>
            </div>
        </div>

        <!-- Fade In Utility -->
        <div class="col-lg-6">
            <div class="card position-relative">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin đề thi</h6>
                </div>
                <div class="card-body">
                    <div class="form-horizontal">
                        @using (Html.BeginForm("Create", "DeThis", FormMethod.Post, new { @class = "user" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <p>Mã đề thi</p>
                                @Html.EditorFor(model => model.TenDe, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Mã đề thi" } })
                            </div>

                            <div class="form-group">
                                <p>Mô tả</p>
                                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Mô tả" } })
                            </div>
                            <div class="form-group">
                                <p>Thời gian thi(số phút)</p>
                                @Html.EditorFor(model => model.ThoiGian, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Thời gian" } })
                            </div>
                            <div class="form-group">
                                <p> Danh sách mã câu hỏi </p>
                                @Html.EditorFor(model => model.DSIDCauHoi, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Danh sách mã câu hỏi", @readonly = "true" } })
                            </div>
                            <div class="form-group">
                                @Html.DropDownList("IDMonHoc", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IDMonHoc, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <select id="IDKyThi" class="form-control">
                                    <option value="" selected="selected">Chọn kỳ thi</option>
                                    @foreach (var kythi in thiOnlineEntities.KyThis)
                                    {
                                        <option value="@kythi.IDKyThi">@kythi.TenKyThi</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <select id="IDCaThi" name="IDCaThi" class="form-control">
                                    <option value="" selected="selected">Chọn ca thi</option>
                                </select>
                            </div>
                            <button type="submit" value="Create" class="btn btn-google btn-user btn-block">Tạo đề thi</button>
                        }
                    </div>
                </div>
            </div>

        </div>


    </div>

</div>

<script>
    function chkClick(chk, idcauhoi) {
        var txt = document.getElementById("DSIDCauHoi");
        if (chk.checked) {
            
            txt.value += idcauhoi + ";";
        }
        else {
            txt.value = txt.value.replace(idcauhoi + ';', '');
            txt.value = txt.value.replace(idcauhoi,'');
        }
    }
</script>
