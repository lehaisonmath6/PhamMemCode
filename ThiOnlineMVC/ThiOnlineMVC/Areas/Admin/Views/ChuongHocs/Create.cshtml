@model ThiOnlineMVC.ChuongHoc

@{
    ViewBag.Title = "Tạo chương học";
}

<div class="center-block">
    <div>
        <div class="p-5 center-block">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Tạo mới chương học!</h1>
            </div>
            @using (Html.BeginForm("Create", "ChuongHocs", FormMethod.Post, new { @class = "user" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @*  @Html.HiddenFor(model => model.IDKhoa)*@
                  

                    <div class="form-group">
                        @Html.EditorFor(model => model.TenChuong, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Tên chương học" } })
                        @Html.ValidationMessageFor(model => model.TenChuong, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">

                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Mô tả" } })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                       
                        @Html.DropDownList("IDMonHoc",null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDMonHoc, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" value="Create" class="btn btn-google btn-user btn-block">Tạo chương</button>
                </div>
            }
            <hr>
            <div class="text-center">
                <div>
                    @Html.ActionLink("Quay trở lại danh sách", "Index", "ChuongHocs", new { @class = "small" })
                </div>
            </div>
        </div>
    </div>
</div>
