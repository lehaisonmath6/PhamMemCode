@model IEnumerable<ThiOnlineMVC.ChuongHoc>

@{
    ViewBag.Title = "Danh sách chương học";
}

<div class="card shadow mb-4 text-center">
    <div class="card-header py-3">
        <h2 class="m-0 font-weight-bold text-primary">Quản lý chương học</h2>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Thêm chương học", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    Tên chương học
                </th>
                <th>
                    Mô tả
                </th>
                <th>
                    Tên môn học
                </th>
                <th>
                    Tên khoa
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenChuong)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonHoc.TenMonHoc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelITem => item.MonHoc.Khoa.TenKhoa)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.IDChuongHoc }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDChuongHoc }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.IDChuongHoc })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>