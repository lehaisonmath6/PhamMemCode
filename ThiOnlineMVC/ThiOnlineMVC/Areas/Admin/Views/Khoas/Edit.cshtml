@model ThiOnlineMVC.Khoa

@{
    ViewBag.Title = "Sửa";
}

<div class="center-block">
    <div>
        <div class="p-5 center-block">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Sửa thông tin khoa!</h1>
            </div>
            @using (Html.BeginForm("Edit", "Khoas", FormMethod.Post, new { @class = "user" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IDKhoa)
                <div class="form-group">
                    @Html.EditorFor(model => model.TenKhoa, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Tên khoa" } })
                    @Html.ValidationMessageFor(model => model.TenKhoa, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">

                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Mô tả" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
                <button type="submit" value="Save" class="btn btn-google btn-user btn-block">Lưu thông tin</button>
            </div>
            }
            <hr>
            <div class="text-center">
                <div>
                    @Html.ActionLink("Quay trở lại danh sách", "Index", "Khoas", new { @class = "small" })
                </div>
            </div>
        </div>
    </div>
</div>