@model IEnumerable<ThiOnlineMVC.Khoa>

@{
    ViewBag.Title = "Danh sách khoa";
}


<div class="card shadow mb-4 text-center">
    <div class="card-header py-3">
        <h2 class="m-0 font-weight-bold text-primary">Quản lý khoa</h2>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Thêm khoa", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                   Tên khoa
                </th>
                <th>
                    Mô tả
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenKhoa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.IDKhoa }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDKhoa }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.IDKhoa })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

