@model IEnumerable<ThiOnlineMVC.NguoiDung>

@{
    ViewBag.Title = "Quản lý sinh viên";
}

<div class="card shadow mb-4 text-center">
    <div class="card-header py-3">
        <h2 class="m-0 font-weight-bold text-primary">Quản lý sinh viên</h2>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Thêm sinh viên", "Create")
        </p>
        <table class="table">
            <tr>
                <th>Tên đăng nhập</th>
                <th>Mật khẩu</th>
                <th>Được phép thi</th>
                <th>Họ tên</th>
                <th>
                   Ngày sinh
                </th>
                <th>
                    Quê quán
                </th>
                <th>
                    Giới tính
                </th>
                <th>Số điện thoại</th>
                <th>Email</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenDangNhap)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MatKhau)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.MoRong)</td>
                    <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                    <td>@Html.DisplayFor(modelITem => item.NgaySinh)</td>
                    <td>@Html.DisplayFor(modelItem => item.QueQuan)</td>
                    <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                    <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                    <td>@Html.DisplayFor(modelITem => item.Email)</td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.IDNguoiDung }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDNguoiDung }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.IDNguoiDung })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

