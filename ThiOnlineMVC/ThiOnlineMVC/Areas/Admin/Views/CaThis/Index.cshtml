@model IEnumerable<ThiOnlineMVC.CaThi>

@{
    ViewBag.Title = "Danh sách ca thi";
}

<div class="card shadow mb-4 text-center">
    <div class="card-header py-3">
        <h2 class="m-0 font-weight-bold text-primary">Quản lý  ca thi</h2>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Thêm ca thi", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    Tên ca
                </th>
                <th>
                    Mô tả
                </th>
                <th>
                    Thời gian bắt đầu
                </th>
                <th>
                    Thời gian kết thúc
                </th>
                <th>
                    Tên kỳ thi
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenCa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThoiGianBatDau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThoiGianKetThuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KyThi.TenKyThi)
                </td>

                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDCa }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCa }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDCa })
                </td>
            </tr>
            }

        </table>

    </div>
</div>