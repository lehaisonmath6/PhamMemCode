@model ThiOnlineMVC.CaThi

@{
    ViewBag.Title = "Delete";
}


<div class="text-center">
    <h2>Xóa môn học</h2>
    <h3>Bạn có chắc chắn muốn xóa?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên ca
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenCa)
            </dd>

            <dt>
                Mô tả
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MoTa)
            </dd>

            <dt>
                Thời gian bắt đầu
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ThoiGianBatDau)
            </dd>
            <dt>
               Thời gian kết thúc
            </dt>
            <dd>
                @Html.DisplayFor(model=> model.ThoiGianKetThuc)
            </dd>
            <dt>
                Kỳ thi
            </dt>
            <dd>
                @Html.DisplayFor(model=>model.KyThi.TenKyThi)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("Quay trở lại danh sách", "Index")
            </div>
        }
    </div>
</div>
